<h1>Listing images</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Extension</th>
      <th>Bundle</th>
      <th>Path</th>
      <th>Remote</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.name %></td>
        <td><%= image.extension %></td>
        <td><%= image.bundle %></td>
        <td><%= image.path %></td>
        <td><%= image.remote %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

