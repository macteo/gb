<div class="row">
    <div class="col-md-6">
        <%= form_for([@club, @venue]) do |f| %>
          <% if @venue.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@venue.errors.count, "error") %> prohibited this venue from being saved:</h2>

              <ul>
              <% @venue.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.label "Nome" %><br>
            <%= f.text_field :name, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Categoria" %><br>
            <%= f.number_field :category, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Telefono" %><br>
            <%= f.text_field :telephone, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Chiusura" %><br>
            <%= f.text_field :closed, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Contatti" %><br>
            <%= f.text_area :contacts, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Descrizione" %><br>
            <%= f.text_area :desc, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :email %><br>
            <%= f.text_field :email, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Istruzioni" %><br>
            <%= f.text_area :instructions, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :note %><br>
            <%= f.text_area :note, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Sito Web" %><br>
            <%= f.text_field :website, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Immagine" %><br>
            <%= f.file_field :file, :class => "form-control" %>
            <%= f.hidden_field :file_cache %>
          </div>
          <div class="form-group">
            <%= f.label "Indirizzo" %><br>
            <%= f.text_field :address, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Latitudine" %><br>
            <%= f.text_field :latitude, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Longitudine" %><br>
            <%= f.text_field :longitude, :class => "form-control" %>
          </div>
          <br />
          <div class="actions">
            <%= f.submit "Salva Esercizio", :class => "btn btn-primary" %>
          </div>
          <br />
        <% end %>

        </div>
        <div class="col-md-6">
            <%= image_tag(@venue.file_url(:iphone_2x), :class => "img-thumbnail", :style => "width:100%;") if @venue.file? %>
            <br />
            <div style="height:500px; width:100%;">
                <div id="map-canvas" style="width:100%; height:100%;"></div>
            </div>
        </div>
</div>

<%= render :partial => 'layouts/map_form', :locals => {:item => 'venue'} %>