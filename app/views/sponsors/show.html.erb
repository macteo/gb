<p id="notice"><%= notice %></p>
<div class="row"> 
    <div class="col-md-8">
        <p>
          <strong>Titolo:</strong>
          <%= @sponsor.title %>
        </p>

        <p>
          <strong>Sottotitolo:</strong>
          <%= @sponsor.subtitle %>
        </p>
        
        <p>
          <strong>Fine validità:</strong>
          <%= @sponsor.finish.strftime('%d-%m-%Y') %>
        </p>

        <p>
          <strong>Inizio validità:</strong>
          <%= @sponsor.start.strftime('%d-%m-%Y') %>
        </p>

        <p>
          <strong>Sito Web:</strong>
          <%= @sponsor.website %>
        </p>
    </div>
    <div class="col-md-4">
        <%= image_tag(@sponsor.file_url(:iphone_2x), :class => "img-thumbnail") if @sponsor.file? %>
    </div>
</div>
<p>
    <%= link_to 'Modifica', edit_sponsor_path(@sponsor), :class => "btn btn-warning" %>
    <%= link_to 'Torna agli sponsor', sponsors_path, :class => "btn btn-success" %>
</p>